<p style="color: green"><%= notice %></p>

<h1>Boards</h1>

<%= render "form", board: @board %>


<div id="boards">
  <% @boards.each do |board| %>
    <%= board.name %> - created by <%= board.email %>, <%= board.created_at.strftime("%m/%d/%Y at %l:%M%P") %>
    <p>
      <%= link_to "Play", board %>
    </p>
  <% end %>
</div>

<%= link_to "New board", new_board_path %>
